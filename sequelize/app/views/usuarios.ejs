<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>BookCraft</title>
</head>
<body>
    <header class="bg-info">
        <nav class="navbar container navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="#">Livraria BookCraft</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Produtos<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Usuários</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pesquisa</a>
                    </li>
                </ul>

            </div>
        </nav>
    </header>
    <main class="container mt-4">
        <div class="d-flex justify-content-between">
            <h1>Lista de Usuários</h1>
            <form action="/users/search" class="d-flex justify-content-around align-items-center" method="GET">
                <input type="text" class="form-control" placeholder="Pesquise um usuário" name="key">
                <button type="submit" class="ml-3 btn-success">Buscar</button>
            </form>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">NOME</th>
                    <th scope="col">AÇÕES</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user  => { %>
                    <tr> 
                        <th scope="row"><%= user.id_usuario %></th> 
                        <th><%= user.nome %></th> 
                        <th>
                            <a href="/users/cod/<%= user.id_usuario%>" class="btn btn-primary">Ver Dados</a>
                            <a href="/users/editar/<%= user.id_usuario%>" class="btn btn-warning">Editar</a>
                            <form action="/users/deletar/<%= user.id_usuario %>?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger">Excluir</button>
                            </form>
                        </th> 
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <% for (let nPage = 1; nPage <= totPage; nPage++) { %>
                    <li class="page-item"><a class="page-link" href="?page=<%= nPage %>"><%= nPage %></a></li>
                <% } %>
            </ul>
        </nav>
    </main>


<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>